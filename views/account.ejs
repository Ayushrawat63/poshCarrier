<%- include('./partials/header') %>
<% if(success.length > 0) { %>
    <div class="absolute top-10 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen px-4 lg:px-20 py-20">
    <div class="mb-4">
        <h1 class="text-2xl font-extrabold">User Information</h1>
        <h3 class="text-lg">Personal details and application.</h3>
    </div>

    <div class="flex flex-col lg:flex-row">
        <% var isAdmin = typeof isAdmin !== "undefined" ? isAdmin : false %>

        <% if (isAdmin) { %>
        <div class="lg:w-1/4 flex flex-col mb-10 lg:mb-0 lg:mr-10">
            <% if (owner.ownerPic) { %>
                <img class="w-full h-56 object-contain" src="data:image/jpeg;base64,<%= owner.ownerPic.toString('base64') %>">
            <% } else { %>
                <img class="w-full h-56 object-contain" src="/images/5856.png" alt="user image">
            <% } %>

            <form action="/owner/uploadimage" method="post" enctype="multipart/form-data" class="mt-3">
                <h5>Upload new image</h5>
                <input type="file" name="userImage" class="block mt-2">
                <button class="px-3 py-2 mt-2 rounded-md bg-blue-500 text-white" type="submit">Upload</button>
            </form>
        </div>

        <div class="lg:w-2/4">
            <div class="flex bg-gray-100 p-3 mb-4">
                <h4 class="w-1/2">Full Name:</h4>
                <span class="text-zinc-500 capitalize"><%= owner.fullName %></span>
            </div>
            <div class="flex p-3 mb-4">
                <h4 class="w-1/2">Email:</h4>
                <span class="text-zinc-500 capitalize"><%= owner.email %></span>
            </div>
            <div class="flex bg-gray-100 p-3 mb-4">
                <h4 class="w-1/2">Role:</h4>
                <span class="text-zinc-500 capitalize"><%= owner.role %></span>
            </div>
            <div class="flex p-3">
                <h4 class="w-1/2">Products listed:</h4>
                <span class="text-zinc-500 capitalize"><%= owner.products.length %></span>
            </div>
        </div>
        <% } else { %>
        <div class="lg:w-1/4 flex flex-col mb-10 lg:mb-0 lg:mr-10">
            <% if (user.customerPic) { %>
                <img class="w-full h-56 object-cover" src="data:image/jpeg;base64,<%= user.customerPic.toString('base64') %>" alt="user image">
            <% } else { %>
                <img class="w-full h-56 object-cover" src="/images/5856.png" alt="user image">
            <% } %>

            <form action="/uploadimage" method="post" enctype="multipart/form-data" class="mt-3">
                <h5>Upload new image</h5>
                <input type="file" name="userImage" class="block mt-2">
                <button class="px-3 py-2 mt-2 rounded-md bg-blue-500 text-white" type="submit">Upload</button>
            </form>
        </div>

        <div class="lg:w-2/4">
            <div class="flex bg-gray-100 p-3 mb-4">
                <h4 class="w-1/2">Full Name:</h4>
                <span class="text-zinc-500 capitalize"><%= user.fullName %></span>
            </div>
            <div class="flex p-3 mb-4">
                <h4 class="w-1/2">Email:</h4>
                <span class="text-zinc-500 capitalize"><%= user.email %></span>
            </div>
            <div class="flex bg-gray-100 p-3 mb-4">
                <h4 class="w-1/2">Role:</h4>
                <span class="text-zinc-500 capitalize"><%= user.role %></span>
            </div>
            <div class="flex p-3">
                <h4 class="w-1/2">Address:</h4>
                <span class="text-zinc-500 capitalize">New Delhi</span>
            </div>
        </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>
