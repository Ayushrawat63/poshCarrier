<%- include('./partials/header') %>
<% if (error.length > 0) { %>
    <div id="flash-message" class="flash-message  z-50 p-4 rounded-md bg-red-500 text-white fixed top-10 left-1/2 transform -translate-x-1/2 transition-opacity duration-500 flex justify-between items-center">
        <span><%= error %></span>
        <button id="close-flash" class="ml-4 text-white font-bold">&times;</button>
    </div>
  <% } %>
 
<div class="min-h-screen flex flex-col justify-center items-center px-4 md:px-10 lg:px-20 bg-gray-50">
    <div class="w-full max-w-lg bg-white shadow-md rounded-lg p-8">
        <h4 class="text-2xl font-semibold mb-6 text-center">Admin Access</h4>
        
        <form action="/owner/login" method="post" class="space-y-4">
            <input
                type="email"
                name="email"
                placeholder="Email"
                class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none transition"
                required
            />
            <input
                type="password"
                name="password"
                placeholder="Password"
                class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none transition"
                required
            />
            <button
                type="submit"
                class="w-full bg-blue-500 text-white py-3 rounded-md hover:bg-blue-600 transition"
            >
                Login
            </button>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
