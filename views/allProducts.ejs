<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="/owner/createproduct">Create new product</a>
            </div>
        </div>
        <div class="w-[85%] flex flex-col gap-5 h-screen">
            <a class="text-red-500" href="/owner/deleteall">Delete all</a>
            <div class="flex items-start gap-5 flex-wrap">
                <% products.forEach(product => { %>
                    <div class="w-48  bg-[<%= product.bgColor %>]">
                        <div class="w-48  flex items-center justify-center  ">
                            <img class="h-[11rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                alt="">
                        </div>
                        <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelColor %>]">
                            <div>
                                <h3><%= product.name %></h3>
                                <h4>â‚¹ <%=product.price%></h4>
                            </div>
                         
                        </div>
                    </div>
                <% }) %>
                
                
            </div>
           
        </div>
    </div>
    <%- include('./partials/footer') %>